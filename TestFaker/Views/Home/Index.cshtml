        function updateInput(val, id) {
            document.getElementById(id).value = val;
            var seed = document.getElementById('seed').value;
            location.reload();
            $.ajax({
                url: "/Home/_TestData",
                method: 'post',
                data: { errorAmount: val, seed: seed },
            });

        }
    </script>

